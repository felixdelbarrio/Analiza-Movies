# Example environment configuration (do not put secrets in this file).
BASEURL=http://localhost

PLEX_PORT=32400
PLEX_TOKEN=replace_with_token
EXCLUDE_PLEX_LIBRARIES=

OMDB_API_KEYS=your_key1,your_key2
OMDB_API_KEY=your_key
OMDB_KEY_ROTATION_ENABLED=true
OMDB_KEY_EXHAUSTED_TTL_SECONDS=43200

# Concurrencia y rate-limit OMDb
OMDB_HTTP_MAX_CONCURRENCY=3
OMDB_HTTP_MIN_INTERVAL_SECONDS=0.05
OMDB_CACHE_TTL_NOT_FOUND_SECONDS=2592000
OMDB_CACHE_TTL_EMPTY_RATINGS_SECONDS=1209600

SILENT_MODE=true
DEBUG_MODE=false
LOGGER_FILE_ENABLED=false
ANALIZA_AUTO_DASHBOARD=false

# PERFORMANCE (caches en memoria)
COLLECTION_OMDB_LOCAL_CACHE_MAX_ITEMS=5000
COLLECTION_WIKI_LOCAL_CACHE_MAX_ITEMS=8000
ANALIZA_OMDB_HOT_CACHE_MAX=8000

# DLNA (usar __wiki fresco si existe)
DLNA_WIKI_EMBEDDED_MODE=use_if_fresh

# Si true, el lazy-wiki se aplica a todos los títulos (no solo DELETE/MAYBE).
COLLECTION_LAZY_WIKI_FOR_ALL=false

# Permite fallback a título/año cuando no hay imdb_id (más llamadas a Wiki)
COLLECTION_LAZY_WIKI_ALLOW_TITLE_YEAR_FALLBACK=true

# Idioma primario y fallback para Wiki
WIKI_LANGUAGE=es
WIKI_FALLBACK_LANGUAGE=en

# Concurrencia para reducir 429 en Wikidata/Wikipedia
WIKI_HTTP_MAX_CONCURRENCY=3
WIKI_SEARCH_CANDIDATES_TTL_SECONDS=5184000
