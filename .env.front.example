# Example frontend environment configuration.
FRONT_DATA_DIR=data
FRONT_REPORTS_DIR=reports

FRONT_OMDB_CACHE_FILENAME=omdb_cache.json
FRONT_WIKI_CACHE_FILENAME=wiki_cache.json
FRONT_METADATA_FIX_FILENAME=metadata_fix.csv
FRONT_REPORT_ALL_FILENAME=report_all.csv
FRONT_REPORT_FILTERED_FILENAME=report_filtered.csv

FRONT_DEBUG=false
FRONT_MODE=api
FRONT_API_BASE_URL=http://localhost:8000
FRONT_API_TIMEOUT_S=30
FRONT_API_PAGE_SIZE=2000

# Señaletica de color en tablas
FRONT_GRID_COLORIZE=true

# Charts
FRONT_SHOW_NUMERIC_FILTERS=false
# Dashboard (max 3, comma-separated)
FRONT_DASHBOARD_VIEWS=Ratings IMDb vs Metacritic,Distribución por decisión,Boxplot IMDb por biblioteca

# Logging (frontend)
LOGGER_FILE_ENABLED=false
LOGGER_FILE_DIR=logs
LOGGER_FILE_PREFIX=front
LOGGER_FILE_INCLUDE_PID=true

PLEX_BASEURL=http://localhost
PLEX_PORT=32400
